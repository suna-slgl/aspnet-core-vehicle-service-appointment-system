@model IEnumerable<ServiceType>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<section class="hero-section rounded-4 mb-5">
    <div class="container text-center py-5">
        <h1 class="display-4 fw-bold mb-4">
            <i class="bi bi-car-front-fill me-3"></i>Araç Servis Randevu Sistemi
        </h1>
        <p class="lead mb-4">Aracınız için profesyonel bakım ve servis hizmetleri. Online randevu alın, zamanınızı verimli kullanın.</p>
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-3">
                <i class="bi bi-person-plus me-2"></i>Hemen Kayıt Ol
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
            </a>
        }
        else
        {
            <a asp-controller="Appointment" asp-action="Create" class="btn btn-light btn-lg">
                <i class="bi bi-calendar-plus me-2"></i>Hemen Randevu Al
            </a>
        }
    </div>
</section>

<!-- Features Section -->
<section class="mb-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Neden Bizi Tercih Etmelisiniz?</h2>
        <p class="text-muted">Kaliteli hizmet, uygun fiyat ve profesyonel ekip</p>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="service-icon mx-auto bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-clock"></i>
                </div>
                <h5 class="fw-bold">Hızlı Randevu</h5>
                <p class="text-muted">Birkaç tıkla online randevu alın, bekleme derdi yok.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="service-icon mx-auto bg-success bg-opacity-10 text-success">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h5 class="fw-bold">Güvenilir Hizmet</h5>
                <p class="text-muted">Uzman teknisyenlerimizle kaliteli servis garantisi.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center p-4">
                <div class="service-icon mx-auto bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-currency-exchange"></i>
                </div>
                <h5 class="fw-bold">Uygun Fiyat</h5>
                <p class="text-muted">Rekabetçi fiyatlarla bütçenize uygun seçenekler.</p>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="mb-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Hizmetlerimiz</h2>
        <p class="text-muted">Aracınız için sunduğumuz kapsamlı servis hizmetleri</p>
    </div>
    <div class="row g-4">
        @foreach (var service in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="service-icon mx-auto mb-3" style="background-color: @(service.ColorCode)20; color: @service.ColorCode;">
                            <i class="bi @service.IconClass"></i>
                        </div>
                        <h5 class="card-title fw-bold">@service.Name</h5>
                        <p class="card-text text-muted small">@service.Description</p>
                        <div class="mt-3">
                            <span class="badge bg-light text-dark me-2">
                                <i class="bi bi-clock me-1"></i>@service.FormattedDuration
                            </span>
                            <span class="badge bg-success">
                                <price value="@service.Price" css-class=""></price>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- CTA Section -->
<section class="bg-primary text-white rounded-4 p-5 text-center mb-5">
    <h3 class="fw-bold mb-3">Aracınıza İyi Bakın!</h3>
    <p class="mb-4">Düzenli bakım, aracınızın ömrünü uzatır ve güvenliğinizi sağlar.</p>
    @if (!User.Identity?.IsAuthenticated ?? true)
    {
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
            <i class="bi bi-calendar-check me-2"></i>Hemen Başlayın
        </a>
    }
    else
    {
        <a asp-controller="Appointment" asp-action="Create" class="btn btn-light btn-lg">
            <i class="bi bi-calendar-plus me-2"></i>Randevu Oluştur
        </a>
    }
</section>

<!-- Stats Section -->
<section class="mb-5">
    <div class="row text-center g-4">
        <div class="col-md-3">
            <div class="card p-4">
                <h2 class="display-5 fw-bold text-primary">1000+</h2>
                <p class="text-muted mb-0">Mutlu Müşteri</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4">
                <h2 class="display-5 fw-bold text-success">@Model.Count()</h2>
                <p class="text-muted mb-0">Servis Türü</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4">
                <h2 class="display-5 fw-bold text-warning">5+</h2>
                <p class="text-muted mb-0">Uzman Teknisyen</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-4">
                <h2 class="display-5 fw-bold text-info">7/24</h2>
                <p class="text-muted mb-0">Online Randevu</p>
            </div>
        </div>
    </div>
</section>
