@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="row justify-content-center">
    <div class="col-md-8 text-center py-5">
        <div class="display-1 text-danger mb-4">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <h1 class="display-4 fw-bold">Bir Hata Oluştu</h1>
        <p class="lead text-muted mb-4">
            İsteğiniz işlenirken beklenmeyen bir hata oluştu. Lütfen daha sonra tekrar deneyin.
        </p>
        
        @if (Model?.ShowRequestId ?? false)
        {
            <div class="alert alert-secondary">
                <strong>İstek Kimliği:</strong> <code>@Model?.RequestId</code>
            </div>
        }
        
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house me-2"></i>Ana Sayfa
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>Geri Dön
            </button>
        </div>
    </div>
</div>
