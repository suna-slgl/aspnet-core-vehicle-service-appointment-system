@model VehicleServiceApp.ViewComponents.AppointmentSummaryViewModel

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-calendar-event me-2"></i>Bugünkü Randevu Özeti
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-4">
                <div class="display-6 text-primary">@Model.TodayAppointments</div>
                <small class="text-muted">Toplam</small>
            </div>
            <div class="col-4">
                <div class="display-6 text-warning">@Model.PendingAppointments</div>
                <small class="text-muted">Bekleyen</small>
            </div>
            <div class="col-4">
                <div class="display-6 text-success">@Model.CompletedToday</div>
                <small class="text-muted">Tamamlanan</small>
            </div>
        </div>

        @if (Model.UpcomingAppointments.Any())
        {
            <hr />
            <h6><i class="bi bi-clock me-1"></i>Yaklaşan Randevular</h6>
            <ul class="list-group list-group-flush">
                @foreach (var appointment in Model.UpcomingAppointments.Take(3))
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        <div>
                            <span class="fw-bold">@appointment.AppointmentTime.ToString(@"hh\:mm")</span>
                            <span class="text-muted">- @appointment.CustomerName</span>
                            <br />
                            <small class="text-muted">@appointment.ServiceTypeName</small>
                        </div>
                        <appointment-status status="@appointment.Status" show-icon="true"></appointment-status>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="text-center text-muted mt-3">
                <i class="bi bi-calendar-x"></i> Bugün için yaklaşan randevu yok
            </div>
        }
    </div>
</div>
