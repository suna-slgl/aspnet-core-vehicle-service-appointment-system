@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="display-1 text-warning mb-3">
                        <i class="bi bi-key"></i>
                    </div>
                    <h2 class="fw-bold">Şifre Değiştir</h2>
                    <p class="text-muted">Güvenliğiniz için şifrenizi düzenli olarak değiştirin</p>
                </div>

                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label">
                            <i class="bi bi-lock me-1"></i>Mevcut Şifre
                        </label>
                        <input asp-for="CurrentPassword" class="form-control form-control-lg" placeholder="••••••••" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Yeni Şifre
                        </label>
                        <input asp-for="NewPassword" class="form-control form-control-lg" placeholder="••••••••" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <small class="text-muted">En az 6 karakter, büyük/küçük harf ve rakam içermelidir.</small>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="ConfirmNewPassword" class="form-label">
                            <i class="bi bi-shield-lock me-1"></i>Yeni Şifre Tekrar
                        </label>
                        <input asp-for="ConfirmNewPassword" class="form-control form-control-lg" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg text-white">
                            <i class="bi bi-check-lg me-2"></i>Şifreyi Değiştir
                        </button>
                        <a asp-action="Profile" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left me-2"></i>Profile Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
