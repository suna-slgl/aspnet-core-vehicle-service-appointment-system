@model ProfileViewModel
@{
    ViewData["Title"] = "Profilim";
}

<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card shadow-sm">
            <div class="card-body text-center p-4">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" alt="Profil Fotoğrafı" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; font-size: 3rem;">
                        @(Model.FirstName?.FirstOrDefault())@(Model.LastName?.FirstOrDefault())
                    </div>
                }
                
                <h4 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h4>
                <p class="text-muted mb-3">@Model.Email</p>
                
                <hr>
                
                <div class="d-grid gap-2">
                    <a asp-action="ChangePassword" class="btn btn-outline-primary">
                        <i class="bi bi-key me-2"></i>Şifre Değiştir
                    </a>
                    <form asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>İstatistiklerim</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Toplam Araç</span>
                    <span class="badge bg-primary rounded-pill fs-6">@(ViewBag.VehicleCount ?? 0)</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Toplam Randevu</span>
                    <span class="badge bg-info rounded-pill fs-6">@(ViewBag.AppointmentCount ?? 0)</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">Tamamlanan</span>
                    <span class="badge bg-success rounded-pill fs-6">@(ViewBag.CompletedCount ?? 0)</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-person-gear me-2"></i>Profil Bilgileri</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Profile" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="text-muted">E-posta adresi değiştirilemez.</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="ProfileImage" class="form-label">Profil Fotoğrafı</label>
                        <input asp-for="ProfileImage" class="form-control" accept="image/*" />
                        <span asp-validation-for="ProfileImage" class="text-danger"></span>
                        <small class="text-muted">Maksimum dosya boyutu: 2MB. İzin verilen formatlar: JPG, PNG, GIF</small>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Değişiklikleri Kaydet
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg me-2"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Son Randevularım</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentAppointments != null && ((IEnumerable<dynamic>)ViewBag.RecentAppointments).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tarih</th>
                                    <th>Araç</th>
                                    <th>Hizmet</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in ViewBag.RecentAppointments)
                                {
                                    <tr>
                                        <td>@appointment.Date</td>
                                        <td>@appointment.Vehicle</td>
                                        <td>@appointment.Service</td>
                                        <td><appointment-status status="@appointment.Status"></appointment-status></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    @Html.EmptyState("Henüz randevunuz bulunmuyor.", "bi-calendar-x")
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
