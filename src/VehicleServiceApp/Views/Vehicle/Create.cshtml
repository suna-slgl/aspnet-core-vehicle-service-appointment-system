@model VehicleCreateViewModel
@{
    ViewData["Title"] = "Yeni Araç Ekle";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-car-front me-2"></i>Yeni Araç Ekle</h5>
            </div>
            <div class="card-body p-4">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LicensePlate" class="form-label">
                                <i class="bi bi-card-text me-1"></i>Plaka <span class="text-danger">*</span>
                            </label>
                            <input asp-for="LicensePlate" class="form-control" placeholder="34 ABC 123" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                            <small class="text-muted">Örnek: 34 ABC 123</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Year" class="form-label">
                                <i class="bi bi-calendar me-1"></i>Model Yılı <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Year" class="form-select">
                                <option value="">Seçiniz...</option>
                                @for (int year = DateTime.Now.Year + 1; year >= 1990; year--)
                                {
                                    <option value="@year">@year</option>
                                }
                            </select>
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Brand" class="form-label">
                                <i class="bi bi-building me-1"></i>Marka <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Brand" class="form-select" id="brandSelect">
                                <option value="">Seçiniz...</option>
                                <option value="Audi">Audi</option>
                                <option value="BMW">BMW</option>
                                <option value="Chevrolet">Chevrolet</option>
                                <option value="Citroen">Citroen</option>
                                <option value="Dacia">Dacia</option>
                                <option value="Fiat">Fiat</option>
                                <option value="Ford">Ford</option>
                                <option value="Honda">Honda</option>
                                <option value="Hyundai">Hyundai</option>
                                <option value="Kia">Kia</option>
                                <option value="Mazda">Mazda</option>
                                <option value="Mercedes-Benz">Mercedes-Benz</option>
                                <option value="Nissan">Nissan</option>
                                <option value="Opel">Opel</option>
                                <option value="Peugeot">Peugeot</option>
                                <option value="Renault">Renault</option>
                                <option value="Seat">Seat</option>
                                <option value="Skoda">Skoda</option>
                                <option value="Toyota">Toyota</option>
                                <option value="Volkswagen">Volkswagen</option>
                                <option value="Volvo">Volvo</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label">
                                <i class="bi bi-tag me-1"></i>Model <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Model" class="form-control" placeholder="Örn: Golf, Focus, Corolla" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label">
                                <i class="bi bi-palette me-1"></i>Renk
                            </label>
                            <select asp-for="Color" class="form-select">
                                <option value="">Seçiniz...</option>
                                <option value="Beyaz">Beyaz</option>
                                <option value="Siyah">Siyah</option>
                                <option value="Gri">Gri</option>
                                <option value="Gümüş">Gümüş</option>
                                <option value="Kırmızı">Kırmızı</option>
                                <option value="Mavi">Mavi</option>
                                <option value="Lacivert">Lacivert</option>
                                <option value="Yeşil">Yeşil</option>
                                <option value="Kahverengi">Kahverengi</option>
                                <option value="Bej">Bej</option>
                                <option value="Sarı">Sarı</option>
                                <option value="Turuncu">Turuncu</option>
                                <option value="Mor">Mor</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Mileage" class="form-label">
                                <i class="bi bi-speedometer2 me-1"></i>Kilometre
                            </label>
                            <div class="input-group">
                                <input asp-for="Mileage" class="form-control" placeholder="Örn: 50000" />
                                <span class="input-group-text">km</span>
                            </div>
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="FuelType" class="form-label">
                            <i class="bi bi-fuel-pump me-1"></i>Yakıt Tipi <span class="text-danger">*</span>
                        </label>
                        <div class="row g-2">
                            @foreach (var fuelType in Enum.GetValues(typeof(FuelType)).Cast<FuelType>())
                            {
                                var fuelName = fuelType switch
                                {
                                    FuelType.Gasoline => "Benzin",
                                    FuelType.Diesel => "Dizel",
                                    FuelType.Electric => "Elektrik",
                                    FuelType.Hybrid => "Hibrit",
                                    FuelType.LPG => "LPG",
                                    _ => fuelType.ToString()
                                };
                                var fuelIcon = fuelType switch
                                {
                                    FuelType.Gasoline => "bi-droplet",
                                    FuelType.Diesel => "bi-droplet-fill",
                                    FuelType.Electric => "bi-lightning",
                                    FuelType.Hybrid => "bi-recycle",
                                    FuelType.LPG => "bi-fire",
                                    _ => "bi-fuel-pump"
                                };
                                var isChecked = Model != null && Model.FuelType == fuelType;
                                <div class="col-6 col-md-4 col-lg-2">
                                    @if (isChecked)
                                    {
                                        <input asp-for="FuelType" class="btn-check" type="radio" id="fuel_@fuelType" value="@((int)fuelType)" checked />
                                    }
                                    else
                                    {
                                        <input asp-for="FuelType" class="btn-check" type="radio" id="fuel_@fuelType" value="@((int)fuelType)" />
                                    }
                                    <label class="btn btn-outline-secondary w-100" for="fuel_@fuelType">
                                        <i class="bi @fuelIcon me-1"></i>@fuelName
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Geri
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
