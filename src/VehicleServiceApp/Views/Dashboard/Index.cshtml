@model VehicleServiceApp.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "Panelim";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Merhaba, @Model.FirstName</h3>
        <a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-calendar-plus me-1"></i> Yeni Randevu
        </a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Araçlarım</div>
                        <div class="fs-4 fw-semibold">@Model.TotalVehicles</div>
                    </div>
                    <i class="bi bi-car-front fs-2 text-primary"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Toplam Randevu</div>
                        <div class="fs-4 fw-semibold">@Model.TotalAppointments</div>
                    </div>
                    <i class="bi bi-journal-check fs-2 text-success"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Tamamlanan</div>
                        <div class="fs-4 fw-semibold">@Model.CompletedAppointments</div>
                    </div>
                    <i class="bi bi-check2-circle fs-2 text-info"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i> Yaklaşan Randevular</h5>
            <a asp-controller="Appointment" asp-action="Index" class="btn btn-sm btn-outline-secondary">Tümünü Gör</a>
        </div>
        <div class="card-body">
            @if (Model.UpcomingAppointments != null && Model.UpcomingAppointments.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var a in Model.UpcomingAppointments)
                    {
                        <div class="list-group-item px-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-semibold">@a.ServiceTypeName</div>
                                    <small class="text-muted">
                                        <datetime-display date="@a.AppointmentDate" format="short"></datetime-display>
                                        • @a.AppointmentTime.ToString(@"hh\:mm") — @a.VehicleInfo
                                    </small>
                                </div>
                                <appointment-status status="@a.Status"></appointment-status>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                @Html.EmptyState("Yaklaşan randevunuz bulunmuyor.", "bi-calendar")
            }
        </div>
    </div>
</div>
