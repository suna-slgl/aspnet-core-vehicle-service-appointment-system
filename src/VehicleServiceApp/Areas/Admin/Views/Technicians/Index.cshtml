@model IEnumerable<Technician>
@{
    ViewData["Title"] = "Teknisyen Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="bi bi-people me-2"></i>Teknisyenler</h4>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-2"></i>Yeni Teknisyen
    </a>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Teknisyen</th>
                    <th>İletişim</th>
                    <th>Uzmanlık</th>
                    <th>Çalışma Saatleri</th>
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tech in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                     style="width: 40px; height: 40px;">
                                    @tech.FirstName.FirstOrDefault()@tech.LastName.FirstOrDefault()
                                </div>
                                <div>
                                    <div class="fw-bold">@tech.FirstName @tech.LastName</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div><i class="bi bi-envelope me-1 text-muted"></i>@tech.Email</div>
                            <div><i class="bi bi-telephone me-1 text-muted"></i>@tech.PhoneNumber</div>
                        </td>
                        <td>
                            <span class="badge bg-info">@tech.Specialization</span>
                        </td>
                        <td>
                            <i class="bi bi-clock me-1 text-muted"></i>
                            @tech.WorkStartTime.ToString(@"hh\:mm") - @tech.WorkEndTime.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @if (tech.IsActive)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Pasif</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@tech.Id" class="btn btn-outline-primary" title="Düzenle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline"
                                      onsubmit="return confirm('Bu teknisyeni silmek istediğinizden emin misiniz?');">
                                    <input type="hidden" name="id" value="@tech.Id" />
                                    <button type="submit" class="btn btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <p class="text-muted mt-3">Henüz teknisyen eklenmemiş.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus me-2"></i>İlk Teknisyeni Ekle
            </a>
        </div>
    </div>
}
