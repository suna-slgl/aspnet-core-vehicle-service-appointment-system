@model Appointment
@{
    ViewData["Title"] = "Randevu Detayı #" + Model.Id;
}

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Randevu Bilgileri</h5>
                <appointment-status status="@Model.Status"></appointment-status>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">MÜŞTERİ</h6>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                 style="width: 50px; height: 50px;">
                                @Model.User?.FirstName?.FirstOrDefault()@Model.User?.LastName?.FirstOrDefault()
                            </div>
                            <div>
                                <h6 class="mb-0">@Model.User?.FirstName @Model.User?.LastName</h6>
                                <small class="text-muted">@Model.User?.Email</small><br>
                                <small class="text-muted">@Model.User?.PhoneNumber</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">ARAÇ</h6>
                        <div class="border rounded p-3">
                            <div class="fw-bold">@Model.Vehicle?.Brand @Model.Vehicle?.Model</div>
                            <div class="badge bg-primary">@Model.Vehicle?.LicensePlate</div>
                            <div class="small text-muted mt-1">@Model.Vehicle?.Year • @Model.Vehicle?.Color</div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="row g-4">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">TARİH & SAAT</h6>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar3 text-primary fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold">@Model.AppointmentDate.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))</div>
                                <div class="text-muted">Saat: @Model.AppointmentTime.ToString(@"hh\:mm")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted mb-2">HİZMET</h6>
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle p-2 me-3" style="background-color: @(Model.ServiceType?.ColorCode)20;">
                                <i class="@Model.ServiceType?.IconClass fs-4" style="color: @Model.ServiceType?.ColorCode"></i>
                            </div>
                            <div>
                                <div class="fw-bold">@Model.ServiceType?.Name</div>
                                <div class="text-muted">~@Model.ServiceType?.EstimatedDurationMinutes dk • @Model.ServiceType?.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Technician != null)
                {
                    <hr>
                    <h6 class="text-muted mb-2">TEKNİSYEN</h6>
                    <div class="d-flex align-items-center">
                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 40px; height: 40px;">
                            @Model.Technician.FirstName.FirstOrDefault()@Model.Technician.LastName.FirstOrDefault()
                        </div>
                        <div>
                            <div class="fw-bold">@Model.Technician.FirstName @Model.Technician.LastName</div>
                            <small class="text-muted">@Model.Technician.Specialization</small>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.CustomerNotes))
                {
                    <hr>
                    <h6 class="text-muted mb-2">NOTLAR</h6>
                    <div class="bg-light rounded p-3">
                        @Model.CustomerNotes
                    </div>
                }
            </div>
        </div>

        <!-- Status Update Form -->
        @if (Model.Status != AppointmentStatus.Completed && Model.Status != AppointmentStatus.Cancelled)
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-arrow-repeat me-2"></i>Durum Güncelle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateStatus" method="post" class="row g-3">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="col-md-6">
                            <label class="form-label">Yeni Durum</label>
                            <select name="status" class="form-select">
                                @if (Model.Status == AppointmentStatus.Pending)
                                {
                                    <option value="Confirmed">Onayla</option>
                                    <option value="Cancelled">İptal Et</option>
                                }
                                @if (Model.Status == AppointmentStatus.Confirmed)
                                {
                                    <option value="InProgress">İşleme Al</option>
                                    <option value="Cancelled">İptal Et</option>
                                }
                                @if (Model.Status == AppointmentStatus.InProgress)
                                {
                                    <option value="Completed">Tamamla</option>
                                    <option value="Cancelled">İptal Et</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Teknisyen Ata</label>
                            <select name="technicianId" class="form-select">
                                <option value="">Mevcut Teknisyen</option>
                                @if (ViewBag.Technicians != null)
                                {
                                    @foreach (var tech in ViewBag.Technicians as IEnumerable<Technician>)
                                    {
                                        var isSelected = Model.TechnicianId == tech.Id;
                                        if (isSelected)
                                        {
                                            <option value="@tech.Id" selected>@tech.FirstName @tech.LastName</option>
                                        }
                                        else
                                        {
                                            <option value="@tech.Id">@tech.FirstName @tech.LastName</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Randevu Bilgisi</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Randevu No:</span>
                    <strong>#@Model.Id</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Oluşturulma:</span>
                    <span>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Güncelleme:</span>
                        <span>@Model.UpdatedAt.Value.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                }
            </div>
        </div>

        <div class="d-grid gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Randevu Listesi
            </a>
        </div>
    </div>
</div>
